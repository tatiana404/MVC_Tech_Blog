<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-auto">{{post.postTitle}}</div>
      </a>
    </h2>
    <div class="col-auto">posted by {{post.user.username}} on {{format_date post.dateCreated}}
    </div>
  </div>  
  <p class="card-body">
   {{post.postContent}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>

<script src="/js/new.js"></script>
